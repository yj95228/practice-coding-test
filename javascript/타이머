<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>7일차 과제</title>
    <style>
        html,body {
            display:flex;
            justify-content: center;
            align-items: center;
            height:100%;
        }
        div#container{
            margin: 0 auto;
        }
        h1{
            font-size: 50px;
        }
        button {
            width: 60px;
            height: 30px;
            margin: 2px;
            background-color:#333;
            border: none;
            border-radius: 5px;
            border-width: 1px;
            font-size: 15px;
            cursor: pointer;
            color:#fff;
            transition:all 1s;
        }
        button:hover{
            color:#333;
            box-shadow: 60px 0 0 0 rgba(255,255,255,0.9) inset;
        }
    </style>
</head>
<body>
    <div id="container">
        <h1 id="clock"></h1>
        <div id="button">
            <button id="start">시작</button>
            <button id="stop">멈춤</button>
            <button id="reset">초기화</button>
        </div>
    </div>
    
    <script>
        let clock = document.getElementById("clock");
        let timer = 0;
        let hour = parseInt( timer / 3600 ) % 24;
        let minute = parseInt( timer / 60 ) % 60;
        let second = timer % 60;

        let startClick = document.getElementById("start");
        let stopClick = document.getElementById("stop");
        let resetClick = document.getElementById("reset");

        startClick.addEventListener("click", function(){
            start();
            startClick.disabled = true;
        })

        stopClick.addEventListener("click", function(){
            stop();
            startClick.disabled = false;
        })

        resetClick.addEventListener("click", function(){
            reset();
            startClick.disabled = false;
        })

        function getTime(){
            let hour = parseInt( timer / 3600 ) % 24;
            let minute = parseInt( timer / 60 ) % 60;
            let second = timer % 60;
            clock.innerHTML = `${hour<10 ? `0${hour}`:hour}:${minute<10 ? `0${minute}`:minute}:${second<10 ? `0${second}`:second}`;
        }
        
        function timeUp(){
            timer++;
            getTime();
            start();
        }

        function start(){
            time = setTimeout(timeUp, 1000);
        }

        function stop(){
            clearTimeout(time);
        }

        function reset(){
            // clearInterval(time);
            timer = 0;
            getTime();
        }
        
        clock.innerHTML = `${hour<10 ? `0${hour}`:hour}:${minute<10 ? `0${minute}`:minute}:${second<10 ? `0${second}`:second}`;
    </script>
</body>
</html>
