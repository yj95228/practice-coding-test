// https://school.programmers.co.kr/learn/courses/30/lessons/12912?language=javascript
function solution(a, b) {
    let answer = 0;
    if(a < b){
        for(let i=a; i<=b; i++){
            answer += i;
        }
    }else{
        for(let j=b; j<=a; j++){
            answer += j;
        }
    }
    return answer;
}